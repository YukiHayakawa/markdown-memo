{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": [
      "es2017",
      "dom"
    ],
    "types": ["jest"],
    "baseUrl": ".",
    "paths": {
      "js/*": ["src/js/*"],
      "css/*": ["src/css/*"],
      "~/*": ["../*"],
    }
  },
  "exclude": [
    "node_modules"
  ]
}
